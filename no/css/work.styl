section#work {
    min-height: 100vh;

    padding-top: 120px;
    @media (max-width: 600px) {
        padding-top: 100px;
    }

    ul {
        text-align: center;
    }

    li {
        a {
            cursor: pointer;
        }

        padding: 0 20px;
        vertical-align: top;
        height: 300px;

        text-align: center;
        width: 200px;

        display: inline-block;

        .circle {
            .image {
                position: absolute;
                top: 0;
                background-repeat: no-repeat;
                background-size: contain;
                background-position: center;
                border-radius: 50%;
                height: 200px;
                width: 200px;
            }


            display: flex;
            flex-direction: column;
            justify-content: center;

            border-radius: 50%;
            height: 200px;
            width: 200px;
            margin-bottom: 20px;
            margin: auto;
        }

        &>h3 {
            font-size: 14px;
            margin-top: 20px;
        }

        &>h4 {
            font-size: 14px;
            margin-top: 5px;
            color: color-light-grey;
        }

        /* Hide / Reveal */

        .info {
            position: relative;
            background: color-blue;
            width: 100%;
            color: white;
            display: none;
            z-index: 1;
        }

        .circle {
            .image {
                opacity: 1;
                transition: opacity 0.4s;
                transform: rotateZ(0deg) ;
                transition: transform 0.4s, opacity 0.4s;
            }
            position: relative;
        }

        overflow: hidden;

        &.detailed {
            overflow: initial;
            height: auto;
            .info {
                display: block;
                margin-bottom: 20px;
                padding: 20px;
                box-sizing: border-box;

                h3 {
                    display: inline-block;
                    font-weight: 600;
                }

                h4 {
                    display: inline-block;
                    color: color-light-blue;
                    margin-left: 0.2em;
                }

                p {
                    margin: 1.5em auto;
                    line-height: 1.2em;
                    max-width: 600px;
                }

                a {
                    text-decoration: underline;
                    color: #fff;
                    margin-left: 0.5em;
                }

                em {
                    font-weight: 600;
                    color: #fff;
                }
            }

            .arrow {
                content: "";
                margin: auto;
                margin-top: 10px;
                width: 0;
                height: 0;
                border-left: 15px solid transparent;
                border-right: 15px solid transparent;
                border-bottom: 15px solid color-blue;
            }

            &>h3, &>h4 {
                display: none;
            }
        }

        &.faded {
            h3, h4, .circle {
                opacity: 0.3;
            }
        }
    }
}
