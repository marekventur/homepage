/*** Contact ***/

section#contact {
    margin: 100px 20px;
    @media (max-width: 600px) {
        margin: 100px 10px;
    }
    text-align: center;

    h2 {
        font-size: 30px;
        margin-bottom: 40px;
    }

    p {
        font-size: 20px;
        max-width: 600px;
        margin: auto;
        margin-bottom: 20px;
    }

    a {
        color: color-blue;
    }
}
