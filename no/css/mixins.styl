text-shadow-3d(x, y) {
    text-shadow:
        x*0.2 y*0.2 0     #ccc,
        x*0.4 y*0.4 0     #c9c9c9,
        x*0.6 y*0.6 0     #bbb,
        x*0.8 y*0.8 0     #b9b9b9,
        x     y     0     #aaa,

        0 6px 1px   rgba(0,0,0,.1),
        0 0px 5px   rgba(0,0,0,.1),
        0 1px 3px   rgba(0,0,0,.3),
        0 3px 5px   rgba(0,0,0,.2),
        0 5px 10px  rgba(0,0,0,.25),
        0 10px 10px rgba(0,0,0,.2),
        0 20px 20px rgba(0,0,0,.15);
}

box-shadow-3d(x, y) {
    box-shadow:
        x*0.2 y*0.2 0     #ccc,
        x*0.4 y*0.4 0     #c9c9c9,
        x*0.6 y*0.6 0     #bbb,
        x*0.8 y*0.8 0     #b9b9b9,
        x     y     0     #aaa,

        0 6px 1px   rgba(0,0,0,.1),
        0 0px 5px   rgba(0,0,0,.1),
        0 1px 3px   rgba(0,0,0,.3),
        0 3px 5px   rgba(0,0,0,.2),
        0 5px 10px  rgba(0,0,0,.25),
        0 10px 10px rgba(0,0,0,.2),
        0 20px 20px rgba(0,0,0,.15);
}